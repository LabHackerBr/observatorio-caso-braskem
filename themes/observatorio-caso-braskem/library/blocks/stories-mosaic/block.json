{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "hacklabr/stories-mosaic",
	"version": "0.1.0",
	"title": "Mosaic Stories",
	"category": "text",
	"icon": "excerpt-view",
	"description": "Show the latestes webstories in a draggable mosaic.",
	"example": {},
	"supports": {
		"html": false
	},
	"attributes": {
		"blockId": {
			"type": "string",
            "default": ""
		},
		"compare": {
			"type": "string",
			"default": "OR"
		},
		"heading": {
			"type": "string",
            "default": ""
		},
		"linkUrl": {
			"type": "string",
            "default": ""
		},
		"noCompare": {
			"type": "string",
			"default": "OR"
		},
		"noPostType": {
			"type": "string",
            "default": ""
		},
		"noQueryTerms": {
			"type": "array",
            "default": []
		},
		"noTaxonomy": {
			"type": "string",
            "default": ""
		},
		"order": {
			"type": "string",
			"default": "desc"
		},
		"orderBy": {
			"type": "string",
			"default": "date"
		},
		"postsToShow": {
			"type": "number",
			"default": 11
		},
		"postType": {
			"type": "string",
			"default": "web-story"
		},
		"queryTerms": {
			"type": "array",
            "default": []
		},
		"showDate": {
			"type": "boolean",
			"default": false
		},
		"showThumbnail": {
			"type": "boolean",
			"default": true
		},
        "taxonomy": {
            "type": "string",
            "default": ""
        }
	},
	"textdomain": "hacklabr",
    "editorScript": ["file:../../../dist/blocks/stories-mosaic/editor.js"],
    "editorStyle": ["file:../../../dist/blocks/stories-mosaic/editor.css"],
    "script": ["file:../../../dist/blocks/stories-mosaic/index.js"],
    "style": ["file:../../../dist/blocks/stories-mosaic/index.css"]
}
